<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="org_heyi_base_dialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="org_heyi_base_dialogStyle_No_Frame" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="org_heyi_base_dialog_window_style">
        <item name="android:windowEnterAnimation">@anim/org_heyi_base_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/org_heyi_base_bottom_out</item>
    </style>
</resources>